<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/payline-guest-carts/:cartId/payment-information" method="POST">
        <service class="Monext\Payline\Api\GuestPaymentManagementInterface" method="savePaymentInformationFacade"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/payline-carts/mine/payment-information" method="POST">
        <service class="Monext\Payline\Api\PaymentManagementInterface" method="savePaymentInformationFacade"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    
</routes>
